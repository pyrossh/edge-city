{
  "name": "parotta-example",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev static",
    "build": "parotta build cloudflare",
    "run": "docker run -p 3000:3000 example",
    "test": "bun test",
    "test-e2e": "playwright test"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.2.9",
    "drizzle-orm": "0.26.0",
    "normalize.css": "^8.0.1",
    "nprogress": "0.2.0",
    "react": "18.2.0",
    "react-aria-components": "1.0.0-alpha.3",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.4",
    "react-helmet-async": "1.3.0",
    "react-hook-form": "7.43.9",
    "sql-highlight": "^4.3.2",
    "zod": "^3.21.4",
    "parotta-runtime": "workspace:*"
  },
  "devDependencies": {
    "parotta-cli": "workspace:*",
    "@playwright/test": "^1.31.2",
    "eslint": "^8.35.0",
    "eslint-config-react-app": "^7.0.1"
  },
  "parotta": {
    "hydrate": true,
    "css": [
      "node_modules/normalize.css/normalize.css"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "react-app"
    ],
    "ignorePatterns": [
      "build"
    ],
    "rules": {
      "react/prop-types": "warn",
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "warn"
    }
  }
}