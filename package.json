{
  "name": "parotta-example",
  "type": "module",
  "scripts": {
    "dev": "bun --hot main.js",
    "start": "bun main.js",
    "build": "docker build . -t example",
    "run": "docker run -p 3000:3000 example",
    "test": "bun test",
    "test-e2e": "playwright test"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.2.9",
    "drizzle-auth-adaptor-pg": "^0.0.3",
    "drizzle-orm": "0.25.4",
    "next-auth": "^4.22.1",
    "normalize.css": "^8.0.1",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.4",
    "react-helmet-async": "^1.3.0",
    "sql-highlight": "^4.3.2"
  },
  "devDependencies": {
    "drizzle-kit": "0.17.6",
    "@playwright/test": "^1.31.2",
    "eslint": "^8.35.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-recommended": "^4.1.0"
  },
  "parotta": {
    "hydrate": true,
    "css": [
      "node_modules/normalize.css/normalize.css"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "react-app"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "rules": {
      "react/prop-types": "warn",
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "warn"
    }
  }
}