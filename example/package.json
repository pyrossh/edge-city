{
  "name": "edge-city-example",
  "type": "module",
  "scripts": {
    "dev": "edge-city build cloudflare",
    "dev-server": "wrangler pages dev static --local --live-reload",
    "build": "NODE_ENV=production edge-city build cloudflare",
    "test": "bun test",
    "test-e2e": "playwright test"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.2.9",
    "drizzle-orm": "0.26.0",
    "modern-normalize": "^2.0.0",
    "normalize.css": "^8.0.1",
    "nprogress": "0.2.0",
    "edge-city": "workspace:*",
    "react": "18.2.0",
    "react-aria-components": "1.0.0-alpha.3",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.4",
    "react-helmet-async": "1.3.0",
    "react-hook-form": "7.43.9",
    "sql-highlight": "^4.3.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.31.2",
    "eslint": "^8.35.0",
    "eslint-config-react-app": "^7.0.1"
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "react-app"
    ],
    "ignorePatterns": [
      "build"
    ],
    "rules": {
      "react/prop-types": "warn",
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "warn"
    }
  }
}